{
  "name": "react-magic-text",
  "version": "0.0.5",
  "description": "Magic Text component for React",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "export NODE_ENV=production && tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test": "echo 'no tests yet'",
    "test:run": "jest --config jestconfig.json",
    "test:watch": "jest --config jestconfig.json --watch",
    "version": "npm run test && npm run format && git add -A src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BarthesSimpson/react-magic-text.git"
  },
  "keywords": [
    "react",
    "text",
    "input",
    "textarea"
  ],
  "author": "BarthesSimpson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BarthesSimpson/react-magic-text/issues"
  },
  "homepage": "https://github.com/BarthesSimpson/react-magic-text#readme",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@storybook/addon-actions": "^5.1.10",
    "@storybook/addon-info": "^5.1.10",
    "@storybook/react": "^5.1.10",
    "@types/jest": "^24.0.16",
    "@types/node": "^12.6.8",
    "@types/react": "^16.8.24",
    "@types/react-dom": "^16.8.5",
    "@types/storybook__react": "^4.0.2",
    "@types/styled-components": "^4.1.18",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "react-docgen-typescript-loader": "^3.1.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "styled-components": "^4.3.2"
  }
}
